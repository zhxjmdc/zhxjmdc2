<include file="Index/sidebar" />
<include file="Index/header" />
<form id="articleForm">
    <div class="row">
        <div class="col-lg-12 animated fadeInRight">
            <div class="mail-box-header">
                <div class="pull-right tooltip-demo">
                    <button onclick="serializeAdd()" class="btn btn-success btn-sm" data-toggle="tooltip" data-placement="top" title="发布"><i class="fa fa-pencil"></i>发布</button>
                </div>      
                <h2>添加新连载</h2>
            </div>

            <div class="mail-box">
                <div class="mail-body">
                    <div class="form-group">
                        <label class="col-sm-2 control-label">连载标题：</label>
                        <div class="col-sm-10">
                            <input type="text" id="name" class="form-control" value="" required name="name">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">描述：</label>
                        <div class="col-sm-10">
                            <input type="text" id="describe" class="form-control" value="" name="describe">
                        </div>
                    </div>
                    <div class="form-group" id="data_1">
                        <label class="col-sm-2 control-label">日期：</label>
                        <div class="col-sm-10 input-group date article-add-date">
                            <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                            <input type="text" id="create_time" class="form-control" value="" name="create_time">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5><small>文章列表</small></h5>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                        <a class="dropdown-toggle" data-toggle="dropdown" href="table_data_tables.html#">
                            <i class="fa fa-wrench"></i>
                        </a>
                        <ul class="dropdown-menu dropdown-user">
                            <li><a href="table_data_tables.html#">选项1</a>
                            </li>
                            <li><a href="table_data_tables.html#">选项2</a>
                            </li>
                            </ul>
                        <a class="close-link">
                            <i class="fa fa-times"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content">

                    <table class="table table-striped table-bordered table-hover dataTables-example column-table">
                        <thead>
                            <tr>
                                <th>标题</th>
                                <th>操作</th>
                                <th>描述</th>
                                <th>日期</th>
                            </tr>
                        </thead>
                        <tbody>
                            <foreach name="serialize" item="v">
                                <tr>
                                    <td>
                                        {$v.name}
                                    </td>
                                    <td class="table-operate">
                                        <span style="color:#f00" onclick="serializeDel({$v.sid})">删除</span>
                                        <span><a href="{:U('Home/Article/serialize_edit_page',array('sid' => $v['sid']))}">添加文章/修改</a></span>
                                    </td>
                                    <td>{$v.describe}</td>
                                    <td><?php echo date('Y-n-j',$v['create_time'])?></td>
                                </tr>
                            </foreach>
                        </tbody>
                        <tfoot>
                            <tr>
                                <th>标题</th>
                                <th>操作</th>
                                <th>描述</th>
                                <th>日期</th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>
<include file="Index/footer" />
<script>
    $(document).ready(function () {
        // 日期
        $('#data_1 .input-group').datepicker({
            todayBtn: "linked",
            keyboardNavigation: false,
            forceParse: false,
            calendarWeeks: true,
            autoclose: true
        });

        $("#articleForm").validate({
            debug:true
        });

        // 表格初始化
        $('.dataTables-example').dataTable(); 
    });
</script>