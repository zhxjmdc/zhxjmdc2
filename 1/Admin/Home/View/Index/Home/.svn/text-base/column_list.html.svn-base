<include file="Index/sidebar" />
<include file="Index/header" />
    <div class="row wrapper border-bottom white-bg page-heading">
        <div class="col-lg-10">
            <h2>栏目管理</h2>
            <ol class="breadcrumb">
                <li><a href="index.html">主页</a></li>
                <li><strong>栏目列表</strong></li>
            </ol>
        </div>
        <div class="col-lg-2">
        </div>
    </div>

    <div class="wrapper wrapper-content animated fadeInRight">
        <div class="row">
            <div class="col-lg-12">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        <h5><small>栏目列表</small></h5>
                        <div class="ibox-tools">
                            <a class="collapse-link">
                                <i class="fa fa-chevron-up"></i>
                            </a>
                            <a class="dropdown-toggle" data-toggle="dropdown" href="table_data_tables.html#">
                                <i class="fa fa-wrench"></i>
                            </a>
                            <ul class="dropdown-menu dropdown-user">
                                <li>
                                    <a onclick="column_order()">更新栏目权重</a>
                                </li>
                            </ul>
                            <a class="close-link">
                                <i class="fa fa-times"></i>
                            </a>
                        </div>
                    </div>
                    <div class="ibox-content">

                        <table class="table table-striped table-bordered table-hover dataTables-example column-table">
                            <thead>
                                <tr>
                                    <th>栏目名称</th>
                                    <th>操作</th>
                                    <th>开启状态</th>
                                    <th>栏目类型</th>
                                    <th>权重</th>
                                </tr>
                            </thead>
                            <tbody>
                                <foreach name="column" item="v">
                                    <tr>
                                        <td>{$v.name}</td>
                                        <td class="table-operate">
                                            <span style="color:#f00" onclick="columnDel({$v.cid})">删除</span>
                                            <span>
                                                <a href="{:U('Home/Column/column_edit_page',array('cid' => $v['cid']))}">修改</a>
                                            </span>
                                            <span>
                                                <a href="{:U('Home/Column/column_add_page')}">添加</a>
                                            </span>
                                            <span>预览</span>
                                        </td>
                                        <td>
                                            <a id='status{$v.cid}' onclick="changeStatus({$v.cid})">{$v.status}</a>
                                        </td>
                                        <th>{$v.type}</th>
                                        <td class="column-order">
                                            <input type="text" class="form-control" value="{$v.column_order}" style="max-width:80px;">
                                            <input type="hidden" value="{$v.cid}">
                                        </td>
                                    </tr>
                                </foreach>
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>栏目名称</th>
                                    <th>操作</th>
                                    <th>开启状态</th>
                                    <th>栏目类型</th>
                                    <th>排序</th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

<include file="Index/footer" />
    <!-- Page-Level Scripts -->
<script>
    $(document).ready(function () {
        // 表格初始化
        $('.dataTables-example').dataTable();

        $('#order').focusout(function(){
            if($('#order').val() == "") $('#order').val('0');
        });
    });
</script>