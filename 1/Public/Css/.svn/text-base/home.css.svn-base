.blog-article-tips{
	height:20px;
	margin-bottom: 10px;
	margin-right: 20px;
}
.blog-article-tips>p{
	float:right;
	color: #00FF7F;
}
.blog-article-tips>p>a{
	color: #73FBE8;
}
.blog-article-tips>p>a>span{
	max-width:55px;
}
.hr1{
	margin-left: 10px;
	margin-right: 10px;
}
.swiper-container{
	width: 95%;
	height: 300px;
}

.tips{
	margin-bottom: 5px;
}
.tips>div{
	border:1px solid #E1DADA;
	background-color: #f3f3f3;
	color:#DE4C3B;
	padding-top: 6px;
	padding-bottom: 6px;
}
.tips>div>i{
	padding:0px 5px;
	color: #7F7F7F;
}
.read-detail{
	text-align: right;
	padding-left: 0px!important;
	padding-right: 0px!important;
}
.read-detail>span{
	background-color: #1e73be;
	padding:5px 0px;
	cursor:pointer;
}
.read-detail>span:hover{
	background-color: #7A7B7C;
}
.read-detail>span>a{
	text-decoration: none;
	color:#fff;
	text-align:center;
	height: 30px;
    line-height: 30px;
    padding: 0px 10px;
}