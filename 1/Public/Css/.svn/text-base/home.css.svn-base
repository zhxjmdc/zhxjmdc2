/*3d轮播*/
.home{
	overflow: hidden;
}
.pic-play{
	margin-top: 20px;
}
.bg1{
	background-image:url(../Images/play_1.jpg);
	background-repeat: no-repeat;
	width:100%;
	height: 300px;
}
.bg2{
	background-image:url(../Images/play_2.jpg);
	background-repeat: no-repeat;
	width:100%;
	height: 300px;
}
.bg3{
	background-image:url(../Images/play_3.jpg);
	background-repeat: no-repeat;
	width:100%;
	height: 300px;
}
.swiper-slide {
    background-position: center;
    background-size: cover;
}
/*文章推荐*/
.blog-article{
	margin: 50px 0px 0px 0px;
	padding-right: 20px;
	padding-left: 20px;
	padding-bottom: 10px;

	/*-moz-border-radius: 8px;
    border-radius: 8px;*/
    border:#E1E1E1 1px solid;
	filter:progid:DXImageTransform.Microsoft.Shadow(color=#D2D2D2,direction=120,strength=4);/*兼容ie*/
	-moz-box-shadow: 1px 1px 6px #D2D2D2;/*兼容firefox*/
	-webkit-box-shadow: 1px 1px 6px #D2D2D2;/*兼容safari或chrome*/
	box-shadow:1px 1px 6px #D2D2D2;/*兼容opera或ie9*/
	background-color: #fff;
}
.blog-post-title{
	word-break:break-all;
}
.blog-post-title>a{
	color:#555;
	text-decoration: none;
}
.blog-post-title>a:hover{
	color:#337ab7;
}
.blog-article-img{
	/*width:180px;
	height:150px;
	float:left;*/
	margin-bottom: 20px;
	cursor: pointer;
}
.blog-article-content{
    margin: 10px 0px 0px 0px;
	padding-bottom: 10px;

	/*-moz-border-radius: 8px;
    border-radius: 8px;*/
    border:#E1E1E1 1px solid;
	filter:progid:DXImageTransform.Microsoft.Shadow(color=#D2D2D2,direction=120,strength=4);/*兼容ie*/
	-moz-box-shadow: 1px 1px 6px #D2D2D2;/*兼容firefox*/
	-webkit-box-shadow: 1px 1px 6px #D2D2D2;/*兼容safari或chrome*/
	box-shadow:1px 1px 6px #D2D2D2;/*兼容opera或ie9*/
	background-color: #fff;
}
.home-title{
	white-space: nowrap;
	overflow: hidden;
	text-overflow: ellipsis;
}
.home-article-content{
	font-size:15px;
    line-height: 20px;
    text-indent:2em;
    letter-spacing:1px;
	margin-top: 10px;
}
.home-article-content p{
	padding-right: 20px;
	padding-left: 20px;
}
