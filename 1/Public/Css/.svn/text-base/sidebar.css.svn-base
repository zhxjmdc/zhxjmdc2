/*盒子一*/
.sidebar-box1{
	background-color: #e84c3d;
	/*height: 250px;*/
	text-align: center;
}
.sidebar-box1 h1{
	color:#fff;
	padding-top: 20px;
}
.sidebar-blog{
	margin-top: 20px;
	padding-bottom:20px;
}
.sidebar-blog>a{
	padding: 3px;
}
/*盒子二*/
.sidebar-box2{
	background-color: #FFF;
	height: 80px;
	/*filter:progid:DXImageTransform.Microsoft.Shadow(color=#D2D2D2,direction=120,strength=4);/*兼容ie*/
	-moz-box-shadow: 1px 1px 6px #D2D2D2;/*兼容firefox*/
	-webkit-box-shadow: 1px 1px 6px #D2D2D2;/*兼容safari或chrome*/
	box-shadow:1px 1px 6px #D2D2D2;/*兼容opera或ie9*/
	background-color: #fff;
}
.sidebar-box2>h3{
	margin-left: 10px;
	padding-top: 10px;
	color:#fff;
}
.sidebar-box2>h3>i{
	font-size: 35px;
	margin-right: 5px;
	color:#00D4F5;
}
.sidebar-box2 .input-group{
	padding:0px 10px;
}
.sidebar-box2 .form-control{
	background-color: #fff;
    border: 2px solid #f4f4f4;
    color:#fff;
    letter-spacing:1px;
    font-size: 15px;
}
.sidebar-box2 .form-control:focus{
	outline: 0px !important;
	box-shadow: none;
	-moz-box-shadow: none;
}
.sidebar-box2 .btn-default{
	color: #cdccd1;
	background-color: #fff;
	border-color: #f4f4f4;
}
.sidebar-box2 .btn-default:hover {
	color: #464646;
	background-color: #f4f4f4;
	border-color: #f4f4f4;
}
/*盒子三*/
.sidebar-box3{
	background-color: #FFF;
	height: 250px;
	/*filter:progid:DXImageTransform.Microsoft.Shadow(color=#D2D2D2,direction=120,strength=4);/*兼容ie*/
	-moz-box-shadow: 1px 1px 6px #D2D2D2;/*兼容firefox*/
	-webkit-box-shadow: 1px 1px 6px #D2D2D2;/*兼容safari或chrome*/
	box-shadow:1px 1px 6px #D2D2D2;/*兼容opera或ie9*/
	background-color: #fff;
}
.sidebar-box3>h3{
	margin-left: 10px;
	padding-top: 10px;
	color:#394a54;
}
.sidebar-box3>h3>i{
	font-size: 27px;
	color: #fff;
	background-color: #394a54;
	padding: 3px 4px;
	border-radius:3px;
	margin-right: 10px;
}
.sidebar-box3-list{
	margin-left: 15px;
	margin-top: 15px;
}
.sidebar-box3-list>li{
	margin-bottom: 5px;
	white-space: nowrap;
	overflow: hidden;
	text-overflow: ellipsis;
}
.sidebar-box3-list>li>a{
	color:#555;
	text-decoration: none;
}
.sidebar-box3-list>li>a:hover{
	color:#1FD9B1;
}
